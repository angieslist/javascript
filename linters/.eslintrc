/* All rules are documented at http://eslint.org/docs/rules */

{
  "parser": "babel-eslint",

  "plugins": [
    "react",
    "requirejs"
  ],

  "rules": {
    /* Possible Errors: Areas where possible mistakes occur */
    "comma-dangle": 2,
    "no-cond-assign": 2,
    "no-console": 0,
    "no-constant-condition": 2,
    "no-control-regex": 0,
    "no-debugger": 0,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty-character-class": 2,
    "no-empty": 2,
    "no-ex-assign": 2,
    "no-extra-boolean-cast": 0, /* this is ok, it can be used to coerce to a boolean */
    "no-extra-parens": [2, "functions"],
    "no-extra-semi": 2,
    "no-func-assign": 2,
    "no-inner-declarations": 0,
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": 2,
    "no-negated-in-lhs": 2,
    "no-obj-calls": 2,
    "no-regex-spaces": 2,
    "no-sparse-arrays": 2,
    "no-unreachable": 2,
    "use-isnan": 2,
    "valid-jsdoc": 2,
    "valid-typeof": 2,
    "no-unexpected-multiline": 2,

    /* Best Practices: Prevent making mistakes */
    "accessor-pairs": 0,
    "block-scoped-var": 0,
    "complexity": 0,
    "consistent-return": 2,
    "curly": 2,
    "default-case": 2,
    "dot-notation": 2,
    "dot-location": 0, /* always keep this off */
    "eqeqeq": 2,
    "guard-for-in": 2,
    "no-alert": 2,
    "no-caller": 2,
    "no-div-regex": 0,
    "no-else-return": 0,
    "no-empty-label": 2,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-extend-native": 0,
    "no-extra-bind": 2,
    "no-fallthrough": 0,
    "no-floating-decimal": 0,
    "no-implicit-coercion": 0,
    "no-implied-eval": 2,
    "no-invalid-this": 0, /* revisit one day */
    "no-iterator": 2,
    "no-labels": 2, /* this is basically a goto statement */
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-multi-spaces": 0,
    "no-multi-str": 0,
    "no-native-reassign": 2,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-new": 2,
    "no-octal-escape": 2,
    "no-octal": 2,
    "no-param-reassign": 2,
    "no-process-env": 0,
    "no-proto": 2,
    "no-redeclare": 1, /* TURN TO ERROR SOON */
    "no-return-assign": 2,
    "no-script-url": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 0,
    "no-unused-expressions": 2,
    "no-useless-call": 2,
    "no-void": 2,
    "no-warning-comments": 0, /* always keep this off */
    "no-with": 2,
    "radix": 2,
    "vars-on-top": 0, /* always keep this off */
    "wrap-iife": 0,
    "yoda": 2,

    /* Strict Mode */
    "no-extra-strict": 0,
    "strict": 0,

    /* Variables */
    "init-declarations": 0,
    "no-catch-shadow": 0,
    "no-delete-var": 2,
    "no-label-var": 2,
    "no-shadow-restricted-names": 2,
    "no-shadow": 2,
    "no-undef-init": 2,
    "no-undef": 2,
    "no-undefined": 0,
    "no-unused-vars": 0,
    "no-use-before-define": 2,

    /* Node.js */
    "callback-return": [2, ["callback", "cb", "next"]],
    "global-require": 0, /* requirejs requires this to be 0 */
    "handle-callback-err": 2,
    "no-mixed-requires": 2,
    "no-new-require": 2,
    "no-path-concat": 2,
    "no-process-exit": 2,
    "no-restricted-modules": 2,
    "no-sync": 0,

    /* Stylistic Issues */
    "array-bracket-spacing": [1, "never"], /* TURN TO ERROR SOON */
    "block-spacing": [1, "always"], /* TURN TO ERROR SOON */
    "brace-style": [2, "1tbs"],
    "camelcase": 0,
    "comma-spacing": [2, {"before": false, "after": true}],
    "comma-style": [2, "last"],
    "computed-property-spacing": [2, "never"],
    "consistent-this": [2, "self"],
    "eol-last": 2,
    "func-names": 0, /* always keep this off */
    "func-sytle": 0,
    "id-length": 0,
    "id-match": 0,
    "indent": [2, 2],
    /* "jsx-quotes": [2, "prefer-single"], */ /* ISSUES */
    "key-spacing": [2, {"beforeColon": false, "afterColon": true}],
    "lines-around-comment": 0,
    "linebreak-style": 0,
    "max-nested-callbacks": [2, 4],
    "new-cap": 0,
    "new-parens": 2,
    "newline-after-var": 0,
    "no-array-constructor": 2,
    "no-continue": 2,
    "no-inline-comments": 0,
    "no-lonely-if": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-multiple-empty-lines": [2, {max: 2}],
    "no-nested-ternary": 2,
    "no-new-object": 2,
    /* "no-restricted-syntax": [2, "WithStatement"], */ /* ENABLE SOON */
    "no-spaced-func": 2,
    "no-ternary": 0, /* always keep this off */
    "no-trailing-spaces": 2,
    "no-underscore-dangle": 0,
    "no-unneeded-ternary": 2,
    "object-curly-spacing": 0,
    "one-var": [2, "never"],
    "operator-assignment": 0,
    "operator-linebreak": 0, /* should revist this */
    "padded-blocks": [2, "never"],
    "quote-props": 0, // [2, "as-needed"],
    "quotes": [2, "single"],
    "require-jsdoc": 0,
    "semi-spacing": [2, {"before": false, "after": true}],
    "semi": [2, "always"],
    "sort-vars": 0,
    "space-after-keywords": 2,
    "space-before-blocks": [2, "always"],
    "space-before-function-paren": [2, {"anonymous": "always", "named": "never"}],
    "space-in-parens": 0,
    "space-infix-ops": [2, {"int32Hint": true}],
    "space-return-throw-case": 2,
    "space-unary-ops": 2,
    "spaced-comment": 2,
    "wrap-regex": 2,

    /* ECMAScript 6 */
    "arrow-parens": 2,
    "arrow-spacing": 2,
    "constructor-super": 2,
    "generator-star-spacing": 0,
    "no-class-assign": 2,
    "no-const-assign": 2,
    "no-dupe-class-members": 1, /* TURN TO ERROR SOON */
    "no-this-before-super": 2,
    "no-var": 0,
    "object-shorthand": 0,
    "prefer-arrow-callback": 0, /* revisit one day */
    "prefer-const": 0,
    "prefer-spread": 0, /* revisit one day */
    "prefer-reflect": 0, /* revisit one day */
    "prefer-template": 0, /* revisit one day */
    "require-yield": 2,

    /* Legacy */
    "max-depth": [2, 6],
    "max-len": 0,
    "max-params": [2, 6],
    "max-statements": 0,
    "no-bitwise": 0,
    "no-plusplus": 0,

    /* Plugin: react  */
    /* All rules are documented https://github.com/yannickcr/eslint-plugin-react */
    "react/display-name": 0,
    "react/jsx-boolean-value": 0,
    "react/jsx-closing-bracket-location": [0, {selfClosing: 'tag-aligned', nonEmpty: 'after-props'}], /* revisit one day */
    "react/jsx-curly-spacing": [2, "never"],
    "react/jsx-indent-props": [0, 2], /* revisit one day */
    "react/jsx-max-props-per-line": 0,
    "react/jsx-no-duplicate-props": 2,
    "react/jsx-no-literals": 0,
    "react/jsx-no-undef": 2,
    "react/jsx-sort-prop-types": 0,
    "react/jsx-sort-props": 0,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/no-danger": 2,
    "react/no-did-mount-set-state": 2,
    "react/no-did-update-set-state": 2,
    "react/no-multi-comp": 2,
    "react/no-unknown-property": 2,
    "react/prop-types": 2,
    "react/react-in-jsx-scope": 2,
    "react/require-extension": [2, { "extensions": [".js", ".jsx"] }],
    "react/self-closing-comp": 2,
    "react/sort-comp": 2,
    "react/wrap-multilines": 2,

    /* Plugin: requirejs  */
    /* All rules are documented https://github.com/cvisco/eslint-plugin-requirejs */
    "requirejs/no-invalid-define": 2,
    "requirejs/no-invalid-require": 2,
    "requirejs/no-multiple-define": 2,
    "requirejs/no-assign-exports": 2,
    "requirejs/no-js-extension": 2,

    "requirejs/no-object-define": 2,
    "requirejs/no-function-define": 2,
    "requirejs/no-amd-define": 2,
    "requirejs/no-named-define": 2,
    "requirejs/no-commonjs-wrapper": 0,
    "requirejs/no-commonjs-return": 0,
    "requirejs/no-commonjs-exports": 0,
    "requirejs/no-commonjs-module-exports": 0,
    "requirejs/no-dynamic-require": 2,
    "requirejs/no-conditional-require": 2,
    "requirejs/no-assign-require": 2,
    "requirejs/no-require-tourl": 2,
    "requirejs/enforce-define": 0,
    "requirejs/one-dependency-per-line": 0,
  },

  "ecmaFeatures": {
    "jsx": true
  },

  "env": {
    "browser": true,
    "node": true,
    "worker": false,
    "amd": true,
    "mocha": true,
    "jasmine": false,
    "phantomjs": false,
    "jquery": true,
    "prototypejs": false,
    "shelljs": false,
    "meteor": false,
    "es6": true
  },

  "globals": {
    /* testing */
    "SPEC_SETUP": true,
    "WITH_PAGE": true,
    "WITH_COMPONENT": true,
    "WITH_MODULE": true
  }
}
